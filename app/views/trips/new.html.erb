<div class="create-trip-section">
  <h1 class="create-trip">Create a New Trip</h1>
  <%= bootstrap_form_for [@user, @trip] do |f| %>
    <%= f.text_field :start_city, label: "Location" %>
    <%= f.date_field :start_date, label: "Start Date" %>
    <%= f.date_field :end_date, label: "End Date" %>
    <%= f.submit "Create Trip", class:"btn btn-create-trip" %>
  <% end %>
</div>
