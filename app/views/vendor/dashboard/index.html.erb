Welcome <%= @vendor.first_name %>!
<%= link_to "New Tour", new_user_vendor_tour_path(@vendor) %>
<%= link_to "View All Tours", user_vendor_tours_path(@vendor) %>

<div>
  <h2>Manage Tours</h2>
    <% @vendor.tours.each do |tour| %>
      <div class="tour">
        <p><%= tour.name %></p>
        <p><%= tour.description %></p>
        <p><%= tour.price %></p>
        <p><%= link_to "Edit", edit_user_vendor_tour_path(@vendor, tour) %></p>
        <p><%= link_to "Delete", user_vendor_tour_path(@vendor, tour), method: :delete %></p>
      </div>
    <% end %>
</div>